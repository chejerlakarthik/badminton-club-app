{
  "name": "badminton-club-app",
  "version": "1.0.0",
  "description": "Serverless backend for badminton club management",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "reset": "npm run clean >/dev/null && npm install",
    "dev": "npm run build && cdk synth && cdk deploy --hotswap",
    "deploy": "npm run build && cdk deploy",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "node build.js",
    "build:watch": "node build.js --watch"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.410.0",
    "@aws-sdk/client-eventbridge": "^3.410.0",
    "@aws-sdk/client-ses": "^3.410.0",
    "@aws-sdk/client-sns": "^3.410.0",
    "@aws-sdk/lib-dynamodb": "^3.410.0",
    "@types/lambda-log": "^3.0.3",
    "aws-cdk-lib": "^2.204.0",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "cdk-dia": "^0.12.0",
    "constructs": "^10.4.2",
    "jsonwebtoken": "^9.0.2",
    "lambda-log": "^3.1.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.13",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.24.0",
    "vitest": "^3.2.4"
  }
}
